<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyboardKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="KeyboardSpecialKey" parent="KeyboardKey">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <style name="KeyboardSpaceKey" parent="KeyboardKey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <style name="KeyboardEnterKey" parent="KeyboardKey">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
