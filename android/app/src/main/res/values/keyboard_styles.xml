<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="KeyboardKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/key_background</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="KeyboardSpecialKey" parent="KeyboardKey">
        <item name="android:background">@drawable/key_background_special</item>
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <style name="KeyboardActionKey" parent="KeyboardKey">
        <item name="android:background">@drawable/key_background_action</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="KeyboardChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>
