<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/chatbot_rounded_bg"
    android:elevation="12dp"
    android:clipToOutline="true">

    <!-- Header - More rounded top -->
    <LinearLayout
        android:id="@+id/chat_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chatbot_header_bg"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- AI Icon (Smaller) -->
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/new_logo"
            android:padding="4dp"
            android:background="@drawable/circle_bg_rounded"
            android:scaleType="fitCenter"/>

        <!-- Title (Smaller) -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stremini AI"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <!-- Close Button (Smaller) -->
        <ImageView
            android:id="@+id/btn_close_chat"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FF5555"
            android:padding="4dp"
            android:background="@drawable/close_button_bg"
            android:contentDescription="Close"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <!-- Messages Container - Better rounded feel -->
    <ScrollView
        android:id="@+id/scroll_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/messages_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"/>
    </ScrollView>

    <!-- Input Container - Rounded bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chatbot_input_bg"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Voice Input Button (Smaller) -->
        <ImageView
            android:id="@+id/btn_voice_input"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="#23A6E2"
            android:padding="6dp"
            android:background="@drawable/circle_bg_blue"
            android:contentDescription="Voice Input"
            android:layout_marginEnd="8dp"
            android:scaleType="fitCenter"/>

        <!-- Text Input (Better rounded) -->
        <EditText
            android:id="@+id/et_chat_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ask anything..."
            android:textColorHint="#666666"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/input_bg_rounded"
            android:padding="10dp"
            android:maxLines="3"
            android:inputType="textMultiLine|textCapSentences"/>

        <!-- Send Button (Better quality) -->
        <ImageView
            android:id="@+id/btn_send_message"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#FFFFFF"
            android:padding="7dp"
            android:background="@drawable/send_button_bg"
            android:contentDescription="Send"
            android:layout_marginStart="8dp"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>
