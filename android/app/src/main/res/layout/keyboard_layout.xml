<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingTop="8dp"
    android:paddingBottom="4dp">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingHorizontal="4dp"
        android:clipToPadding="false"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/quick_actions_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/action_undo"
                style="@style/KeyboardChip"
                android:text="âŸ²"
                android:background="@drawable/chip_background"/>

            <TextView
                android:id="@+id/action_improve"
                style="@style/KeyboardChip"
                android:text="âœ¨ Improve"
                android:background="@drawable/chip_background"/>

            <TextView
                android:id="@+id/action_complete"
                style="@style/KeyboardChip"
                android:text="âš¡ Complete"
                android:background="@drawable/chip_background"/>
                
             <TextView
                android:id="@+id/action_tone"
                style="@style/KeyboardChip"
                android:text="ðŸŽ¨ Tone Changer"
                android:background="@drawable/chip_background"/>
                
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView style="@style/KeyboardKey" android:text="1" android:id="@+id/key_1"/>
            <TextView style="@style/KeyboardKey" android:text="2" android:id="@+id/key_2"/>
            <TextView style="@style/KeyboardKey" android:text="3" android:id="@+id/key_3"/>
            <TextView style="@style/KeyboardKey" android:text="4" android:id="@+id/key_4"/>
            <TextView style="@style/KeyboardKey" android:text="5" android:id="@+id/key_5"/>
            <TextView style="@style/KeyboardKey" android:text="6" android:id="@+id/key_6"/>
            <TextView style="@style/KeyboardKey" android:text="7" android:id="@+id/key_7"/>
            <TextView style="@style/KeyboardKey" android:text="8" android:id="@+id/key_8"/>
            <TextView style="@style/KeyboardKey" android:text="9" android:id="@+id/key_9"/>
            <TextView style="@style/KeyboardKey" android:text="0" android:id="@+id/key_0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView style="@style/KeyboardKey" android:text="q" android:id="@+id/key_q"/>
            <TextView style="@style/KeyboardKey" android:text="w" android:id="@+id/key_w"/>
            <TextView style="@style/KeyboardKey" android:text="e" android:id="@+id/key_e"/>
            <TextView style="@style/KeyboardKey" android:text="r" android:id="@+id/key_r"/>
            <TextView style="@style/KeyboardKey" android:text="t" android:id="@+id/key_t"/>
            <TextView style="@style/KeyboardKey" android:text="y" android:id="@+id/key_y"/>
            <TextView style="@style/KeyboardKey" android:text="u" android:id="@+id/key_u"/>
            <TextView style="@style/KeyboardKey" android:text="i" android:id="@+id/key_i"/>
            <TextView style="@style/KeyboardKey" android:text="o" android:id="@+id/key_o"/>
            <TextView style="@style/KeyboardKey" android:text="p" android:id="@+id/key_p"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:paddingHorizontal="12dp">

            <TextView style="@style/KeyboardKey" android:text="a" android:id="@+id/key_a"/>
            <TextView style="@style/KeyboardKey" android:text="s" android:id="@+id/key_s"/>
            <TextView style="@style/KeyboardKey" android:text="d" android:id="@+id/key_d"/>
            <TextView style="@style/KeyboardKey" android:text="f" android:id="@+id/key_f"/>
            <TextView style="@style/KeyboardKey" android:text="g" android:id="@+id/key_g"/>
            <TextView style="@style/KeyboardKey" android:text="h" android:id="@+id/key_h"/>
            <TextView style="@style/KeyboardKey" android:text="j" android:id="@+id/key_j"/>
            <TextView style="@style/KeyboardKey" android:text="k" android:id="@+id/key_k"/>
            <TextView style="@style/KeyboardKey" android:text="l" android:id="@+id/key_l"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/key_shift"
                style="@style/KeyboardSpecialKey"
                android:text="â‡§"
                android:layout_weight="1.3"/>

            <TextView style="@style/KeyboardKey" android:text="z" android:id="@+id/key_z"/>
            <TextView style="@style/KeyboardKey" android:text="x" android:id="@+id/key_x"/>
            <TextView style="@style/KeyboardKey" android:text="c" android:id="@+id/key_c"/>
            <TextView style="@style/KeyboardKey" android:text="v" android:id="@+id/key_v"/>
            <TextView style="@style/KeyboardKey" android:text="b" android:id="@+id/key_b"/>
            <TextView style="@style/KeyboardKey" android:text="n" android:id="@+id/key_n"/>
            <TextView style="@style/KeyboardKey" android:text="m" android:id="@+id/key_m"/>

            <TextView
                android:id="@+id/key_backspace"
                style="@style/KeyboardSpecialKey"
                android:text="âŒ«"
                android:layout_weight="1.3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/key_symbols"
                style="@style/KeyboardSpecialKey"
                android:text="\?123"
                android:textSize="12sp"
                android:layout_weight="1.2"/>
            
            <TextView
                 android:id="@+id/key_comma"
                 style="@style/KeyboardSpecialKey"
                 android:text=","
                 android:layout_weight="1"/>

            <TextView
                android:id="@+id/key_voice"
                style="@style/KeyboardSpecialKey"
                android:text="ðŸŽ¤"
                android:layout_weight="1"/>
            
            <TextView
                android:id="@+id/key_space"
                style="@style/KeyboardKey"
                android:text="space"
                android:textColor="#AAAAAA"
                android:textSize="12sp" 
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/key_dot"
                style="@style/KeyboardKey"
                android:text="."
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/key_enter"
                style="@style/KeyboardActionKey"
                android:text="return"
                android:layout_weight="1.8"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
