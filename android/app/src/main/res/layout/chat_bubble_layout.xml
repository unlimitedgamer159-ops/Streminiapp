<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Main Bubble Icon - HIGH QUALITY -->
    <ImageView
        android:id="@+id/bubble_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/glow_gradient_ring"
        android:src="@drawable/new_logo"
        android:padding="15dp"
        android:contentDescription="Chat Head"
        android:layout_gravity="center"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:elevation="12dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:filterTouchesWhenObscured="false"
        android:antialias="true"/>

    <!-- Menu Items - HIGH QUALITY with proper scaling -->
    
    <!-- AI Chat Button -->
    <ImageView
        android:id="@+id/btn_ai"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_bg_black"
        android:src="@drawable/chatbot"
        android:padding="15dp"
        android:contentDescription="chatbot"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:antialias="true"
        android:filterTouchesWhenObscured="false"/>

    <!-- Scanner Button -->
    <ImageView
        android:id="@+id/btn_scanner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_bg_black"
        android:src="@drawable/shield"
        android:padding="14dp"
        android:contentDescription="Screen Scanner"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:antialias="true"
        android:filterTouchesWhenObscured="false"/>

    <!-- Voice Commands Button -->
    <ImageView
        android:id="@+id/btn_keyboard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_bg_black"
        android:src="@drawable/keyboard_icon"
        android:padding="15dp"
        android:contentDescription="Voice Commands"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:antialias="true"
        android:filterTouchesWhenObscured="false"/>

    <!-- Settings Button -->
    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_bg_black"
        android:src="@drawable/settings"
        android:padding="15dp"
        android:contentDescription="Settings"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:antialias="true"
        android:filterTouchesWhenObscured="false"/>

    <!-- Refresh Button -->
    <ImageView
        android:id="@+id/btn_refresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_bg_black"
        android:src="@drawable/ai_chatbot"
        android:padding="15dp"
        android:contentDescription="Refresh"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:tint="#FFFFFF"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:antialias="true"
        android:filterTouchesWhenObscured="false"/>

</FrameLayout>
