<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <!-- Radial menu buttons placed programmatically; layout here is placeholder -->
    <ImageView
        android:id="@+id/btn_refresh"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_refresh"
        android:contentDescription="Refresh" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings"
        android:contentDescription="Settings" />

    <ImageView
        android:id="@+id/btn_ai"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_ai"
        android:contentDescription="AI" />

    <ImageView
        android:id="@+id/btn_scanner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_scanner"
        android:contentDescription="Scanner" />

    <ImageView
        android:id="@+id/btn_keyboard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_keyboard"
        android:contentDescription="Keyboard" />

</FrameLayout>